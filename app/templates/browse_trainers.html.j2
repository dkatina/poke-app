{% extends 'base.html.j2'%}

{% block css%}
<link rel="stylesheet" href="{{url_for('static', filename='css/browse_trainers.css')}}">
{%endblock%}

{%block title%}
    Browse Trainers
{%endblock%}

{%block content%}
    <div class="divider">
        <div class="me">
            <div class="card" style="width: 18rem;">
                <div class="card" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                    <img src="{{me.get_icon_url()}}" class="img-fluid rounded-start head" alt="...">
                    </div>
                    <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{me.first_name}} {{me.last_name}}</h5>
                          <p class="card-text"><small class="text-muted">Wins: {{me.wins}}</small></p>
                          <p class="card-text"><small class="text-muted">Loses: {{me.loses}}</small></p>
                    </div>
                    </div>
                </div>
                </div>
            <ul class="list-group list-group-flush">
                {% for pokemon in me.pokemon%}
                    <li class="list-group-item"><img class="poke" src="{{pokemon.sprite}}"> {{pokemon.name}}</li>
                {% endfor %}
            </ul>
            <div class="card-body">
                <a href="{{url_for('pokemon.my_team')}}" class="btn btn-info">Edit Team</a>
            </div>
            </div>
        </div>


        <div class="trainers">
            {%for trainer in trainers%}
                {% include './includes/_trainers.html.j2'%}
            {%endfor%}

        </div>
    </div>


{%endblock%}